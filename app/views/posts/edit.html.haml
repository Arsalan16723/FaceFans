.text-center
	= image_tag @post.image.url(:medium)
.form-wrapper
	=simple_form_for @post, html: {class: 'form-horizontal', multipart: true} do |f|
		.form-group
			= f.input :image
		.form-group.text-center
			= f.input :caption
		.form-group.text-center
			= f.button :submit, class: 'btn-success'
		.text-center.edit-links
			= link_to "DeletePost", post_path(@post), method: :delete, data: {confirm: 'Are you sure to delete this Post?'}
			|

			= link_to 'Cancel', post_path